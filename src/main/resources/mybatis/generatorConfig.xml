<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >

<generatorConfiguration>
    <properties resource="mybatis/init.properties"/>

    <classPathEntry location="${classPathEntry}"/>
    <context id="context1">

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>

        <jdbcConnection driverClass="${driverClass}"
                        connectionURL="${connectionURL}"
                        userId="${user}"
                        password="${password}"/>
        <!-- 生成模型的包名和位置-->
        <javaModelGenerator targetPackage="${basePackage}.mybatis.vo" targetProject="${voPackage}"/>
        <!-- 生成映射文件的包名和位置-->
        <sqlMapGenerator targetPackage="${mapperPackage}" targetProject="${mapperProject}"/>
        <!-- 生成DAO的包名和位置-->
        <javaClientGenerator targetPackage="${basePackage}.mybatis.mapper" targetProject="${targetProject}"
                             type="XMLMAPPER"/>

        <!--<table schema="db_user" tableName="u_login_info" domainObjectName="UserLoginInfo">
            <generatedKey column="uid" sqlStatement="MySql" identity="true"/>
        </table>-->
        <table schema="mybatis_test" tableName="tbl_employee" domainObjectName="Employee">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

    </context>
</generatorConfiguration>

